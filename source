ORG 40000
CLEARSCREEN	LD	A,0
		;Colour bit. We want solid black for this.
		LD	HL,4000h
		;We're drawing to the display file, which
		;starts at address 4000h.
		LD	BC,1800h
		;Draws 8px across?
		LD	(HL),0
		LD	D, H
		LD	E, 1
		LDIR ;Go to the start point.

DRAWBLACKBLOCK	LD	A, 0
		LD	(HL), A
		;Dump colour bit to display file
		;LD	BC, 0
		;Go 02FFh across?
		;LDIR
		RET
		
